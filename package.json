{
  "name": "portfolio-web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Personal portfolio website for Data Scientist / ML Engineer",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
